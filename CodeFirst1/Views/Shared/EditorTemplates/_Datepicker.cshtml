@model DateTime?

<div onclick="this.blur();">
    @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue,
    new Dictionary<string, object>() {
        {"size", "16"},
        {"class","input-small"},
        {"readonly", null},
        {"data-val","true"}
    })
    <span class="add-on"><i class="icon-calendar">&nbsp;&nbsp;&nbsp;&nbsp;</i></span>
</div>

<script type="text/javascript">
    $(function () {
        $('.input-small').datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd.mm.yy"
        });
    });
</script>
