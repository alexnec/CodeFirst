@model DateTime?

<div>
        @Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue,
        new Dictionary<string, object>() {
        {"class","input-small"},
        {"readonly", null},
        {"id",ViewData.TemplateInfo.GetFullHtmlFieldId("")},
        {"data-val","true"}
        })
    <span><i class="glyphicon glyphicon-th"></i></span>
</div>

<script type="text/javascript">
    $(function () {
        $('.input-small').datepicker({
            format: 'dd.mm.yyyy',
            autoclose: true
        });
    });
</script>
